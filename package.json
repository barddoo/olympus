{
  "name": "myapp",
  "version": "1.0.0",
  "description": "My cool TypeScript app",
  "main": "dist/index.js",
  "scripts": {
    "start": "yarn run tweet",
    "compile": "tsc",
    "dev": "nodemon src/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec \\\"node -r ts-node/register --inspect-brk\\\" src/index.ts | pino-pretty",
    "lint": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --quiet",
    "lint:fix": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --quiet --fix",
    "test": "mocha -r ts-node/register test/**/*.ts --exit",
    "test:debug": "mocha -r ts-node/register --inspect-brk test/**/*.ts --exit",
    "dump": "node data/load-data.mjs",
    "decompress": "node data/decompress.js",
    "tweet": "tsc && node dist/twitter/main.js"
  },
  "dependencies": {
    "dotenv": "10.0.0",
    "lodash": "^4.17.21",
    "mongodb": "^3.6.8",
    "node-schedule": "^2.0.0",
    "pino": "^6.11.0",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.170",
    "@types/mocha": "^8.2.0",
    "@types/mongodb": "^3.6.17",
    "@types/node": "^15.6.1",
    "@types/node-schedule": "^1.3.1",
    "@types/pino": "^6.3.5",
    "@types/twit": "^2.2.29",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chai": "^4.2.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "pino-pretty": "5.0.1",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "author": "Carmine DiMascio <cdimascio@gmail.com> (https://github.com/cdimascio)"
}
